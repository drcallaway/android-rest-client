<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FillFill">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="WrapFill">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="WrapWrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="WrapZero">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="WrapWrapLabel" parent="WrapWrap">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="WrapFillLabel" parent="WrapFill">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="WrapWrapNormalText" parent="WrapWrap">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WrapFillNormalText" parent="WrapWrap">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>